<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_grid_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
    android:layout_marginRight="@dimen/activity_horizontal_margin_half"
    android:background="@color/colorWhite"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/elevation_size_8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_printer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_printer"
            android:layout_toRightOf="@+id/iv_printer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_printer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:text="Rafika Photocopy"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_printer_city"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_11"
                android:layout_height="wrap_content"
                android:text="0.1km  Jl Kayu Manis V" />


            <TextView
                android:id="@+id/tv_printer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="2 unit Printer InkJet"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin_half"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/iv_drawable_bw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_bw" />

                    <TextView
                        android:id="@+id/tv_printer_bw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/iv_drawable_bw"
                        android:layout_toRightOf="@+id/iv_drawable_bw"
                        android:gravity="center_vertical"
                        android:text="@string/text_mock_price_per_page"
                        android:textSize="@dimen/text_size_10"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/iv_drawable_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_color" />

                    <TextView
                        android:id="@+id/tv_printer_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_drawable_color"
                        android:text="Rp 3000/halaman"
                        android:textSize="@dimen/text_size_10" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
